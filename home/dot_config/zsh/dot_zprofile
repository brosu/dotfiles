[[ -d /Users/bogdan.rosu/Apps/google-cloud-sdk/bin ]] &&
    export PATH="/Users/bogdan.rosu/Apps/google-cloud-sdk/bin:$PATH"

[[ -f /home/bogdan/qmk_firmware/util/qmk_tab_complete.sh ]] &&
    source ~/qmk_firmware/util/qmk_tab_complete.sh

export NVM_DIR="$HOME/.nvm"
[ -s "/home/linuxbrew/.linuxbrew/opt/nvm/nvm.sh" ] && \. "/home/linuxbrew/.linuxbrew/opt/nvm/nvm.sh"  # This loads nvm
[ -s "/home/linuxbrew/.linuxbrew/opt/nvm/etc/bash_completion.d/nvm" ] && \. "/home/linuxbrew/.linuxbrew/opt/nvm/etc/bash_completion.d/nvm"  # This loads nvm bash_completion

export TESTCONTAINERS_DOCKER_SOCKET_OVERRIDE=/var/run/docker.sock
export DOCKER_HOST="unix://${HOME}/.colima/default/docker.sock"

if command -v colima >/dev/null; then
  export TESTCONTAINERS_HOST_OVERRIDE=$(colima ls -j | jq -r 'select(.status=="Running") | .address')
fi

# Push to launchctl so GUI apps see them
launchctl setenv TESTCONTAINERS_DOCKER_SOCKET_OVERRIDE "$TESTCONTAINERS_DOCKER_SOCKET_OVERRIDE"
launchctl setenv TESTCONTAINERS_HOST_OVERRIDE "$TESTCONTAINERS_HOST_OVERRIDE"
launchctl setenv DOCKER_HOST "$DOCKER_HOST"
